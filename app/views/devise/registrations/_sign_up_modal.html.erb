<div class="modal fade" id="sign_up">
  <div class="modal-dialog modal-lg">
    <div class="modal-content">
      <div class="modal-header">
        <h1 class="modal-title">Join Us!</h1>
      </div>
      <div class="modal-body">
        <%= form_for(resource, :as => resource_name,
        :url => registration_path(resource_name),
        :html => { :role => "form" }) do |f| %>
    
          <%= devise_error_messages! %>
          
          <div class="row">
            <div class="col-md-6 col-md-offset-3">
              
              <div class="form-group">
                <div class="row text-center">
                  <div class="col-md-3 col-md-offset-3" style="border-right: 1px solid #9e9e9e;">
                    
                    <div class="radio-inline">
                      <input type="radio" name="userType" value="1" id="type1"/>
                      <label for="type1" data-toggle="popover" title="AS AN ARTIST" 
                        data-content="Lorem ipsum dolor sit amet, consectetuer adipiscing elit. Nam cursus. Morbi ut mi."
                        data-placement="left"
                        data-container="body"
                        data-trigger="hover">ARTIST</label>
                    </div>
                    
                  </div>
                  <div class="col-md-3">
                    
                    <div class="radio-inline">
                      <input type="radio" name="userType" value="0" id="type0"/>
                      <label for="type0" data-toggle="popover" title="AS A PATRON" 
                        data-content="Lorem ipsum dolor sit amet, consectetuer adipiscing elit. Nam cursus. Morbi ut mi."
                        data-placement="right"
                        data-container="body"
                        data-trigger="hover">PATRON</label>
                    </div>
                    
                  </div>
                </div>
              </div>
              
              <div class="form-group">
                <%= f.text_field :first_name, class: "form-control", placeholder: "NAME" %>
              </div>
              <div class="form-group">
                <%= f.text_field :email, class: "form-control", placeholder: "EMAIL" %>
              </div>
              <div class="form-group">
                <%= f.password_field :password, class: "form-control", placeholder: "PASSWORD" %>
              </div>
              <div class="text-center">
                <%= f.submit "Done!", class: "btn btn-link" %>
              </div>
            </div>
          </div>
          
          <% end %>
          <!--  -->
      </div><!-- /.modal-body  -->
    </div><!-- /.modal-content -->
  </div><!-- /.modal-dialog -->
</div><!-- /.modal -->
